    header img {
        width: 120px;
    }

    header input {
        box-sizing: border-box;
        display: inline-block;
        width: 80%;
        height: 35px;
        padding: 10px 8px;
        border-top-left-radius: 3px;
        border-bottom-left-radius: 3px;
        border: none;
        /* border: 1px solid white; */
        outline: none;
    }

    header button {
        display: inline;
        height: 36px;
        width: 32px;
        border: none;
        background-color: #fff;
        border-top-right-radius: 3px;
        border-bottom-right-radius: 3px;
    }
    .input {
        display: flex;
        align-items: center;
    }
